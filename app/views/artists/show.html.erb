<p id="notice"><%= notice %></p>

<h1><%= @artist.name %></h1>

<h3>Songs:</h3>
<div class="row">
  <% @artist.songs.each do |song| %>
    <div class="col-md-4 text-center">
      <%= link_to song.name, artist_song_path(@artist, song) %><br>
      <%= content_tag :iframe, '', src: "https://open.spotify.com/embed?uri=#{song.spotify_uri}", width: 300, height: 300, frameborder: false %>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'Related Artists', related_artists_artist_path(@artist) %> |
<%= link_to 'Top Tracks', top_tracks_artist_path(@artist) %> |
<%= link_to 'Create New Song', new_artist_song_path(@artist) %>
